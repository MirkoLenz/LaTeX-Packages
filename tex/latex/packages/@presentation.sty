\setbeamercolor{framesource}{fg=fgColor}
\setbeamerfont{framesource}{size=\scriptsize}

\newcommand{\footsource}[1]{\begin{textblock*}{8cm}(8cm,8cm)
	\begin{beamercolorbox}[ht=0.5cm,left]{framesource}
		\usebeamerfont{framesource}\usebeamercolor[fg]{framesource} \strong{Source:} {#1}
	\end{beamercolorbox}
\end{textblock*}}

\newcommand{\source}[1]{
	\\[-.3em]
	{
		\footnotesize
		\textcolor{highlightColor}{#1}
	}
}




\RequirePackage{pdfcomment}


\newcommand{\pdfnote}[1]{
	\begin{textblock*}{1mm}(0mm,0mm)
		\pdfcomment[icon=note]{#1}
	\end{textblock*}
}

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-minion}

\setmainfont[
	Ligatures = TeX,
	BoldFont = Myriad Pro Semibold,
	ItalicFont = * Italic,
	BoldItalicFont = * Semibold Italic
]{Minion Pro}

\setsansfont[
	Ligatures = TeX,
	BoldFont = * Semibold,
	ItalicFont = * Italic,
	BoldItalicFont = * Semibold Italic,
	Scale = MatchUppercase
]{Myriad Pro}

\setmonofont[Scale = MatchUppercase]{Source Code Pro}



\setmathfont{LatinModern-Math.otf} % MnSymbol
\setmathfont[range=\mathup/{Latin,latin}]{Minion Pro}
\setmathfont[range=\mathit/{Latin,latin}]{Minion Pro Italic}
\setmathfont[range=\mathbfup/{Latin,latin}]{Minion Pro Semibold}
\setmathfont[range=\mathbfit/{Latin,latin}]{Minion Pro Semibold Italic}

\if@koma
	\recalctypearea
\fi
\enableziffer

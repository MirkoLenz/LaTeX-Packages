\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-minion}

\ifluatexorxetex
	\setmainfont[Numbers = {Lining, Proportional}]{Source Serif Pro}
	\setsansfont[Numbers = {Lining, Proportional}]{Source Sans Pro}
	\setmonofont{Source Code Pro}

	\setmathfont{LatinModern-Math.otf}
	\setmathfont[range=\mathup/{Latin,latin}]{Source Serif Pro}
	\setmathfont[range=\mathit/{Latin,latin}]{Source Serif Pro Italic}
	\setmathfont[range=\mathbfup/{Latin,latin}]{Source Serif Pro Bold}
	\setmathfont[range=\mathbfit/{Latin,latin}]{Source Serif Pro Bold Italic}
\else
	\RequirePackage[lining, proportional]{sourceserifpro}
	\RequirePackage[lining, proportional]{sourcesanspro}
	\RequirePackage{sourcecodepro}
	% \RequirePackage{mathpazo}
\fi


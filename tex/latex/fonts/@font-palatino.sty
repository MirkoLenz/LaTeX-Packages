\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-palatino}

\ifluatexorxetex
	\setmainfont{TeX Gyre Pagella}

	\setsansfont[
		Scale = MatchUppercase,
		BoldFont = * SemiBold,
		BoldItalicFont = * SemiBold Italic
	]{Fira Sans}

	\setmonofont[Scale = MatchUppercase]{Fira Mono}

	\setmathfont{TeX Gyre Pagella Math}
	\setmathfont[range = \setminus]{Asana Math}
\else
	\RequirePackage{tgpagella}
	\RequirePackage[oldstyle, proportional, semibold]{FiraSans}
	\RequirePackage{FiraMono}
	\RequirePackage{newpxmath} % \RequirePackage{mathpazo}
\fi


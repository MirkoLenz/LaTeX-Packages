\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-fira}

\ifluatexorxetex
	\setmainfont[
		Numbers = {Lining, Proportional},
		BoldFont = * SemiBold,
		BoldItalicFont = * SemiBold Italic,
	]{Fira Sans}

	\setsansfont[
		Numbers = {Lining, Proportional},
		BoldFont = * SemiBold,
		BoldItalicFont = * SemiBold Italic
	]{Fira Sans}

	\setmonofont{Fira Mono}

	\if@overleaf
		\setmathfont{Asana Math}
	\else
		\setmathfont{Fira Math}
		\setmathfont[range = \setminus]{Asana Math}
	\fi
\else
	\RequirePackage[sfdefault, lining, proportional, semibold]{FiraSans}
	\RequirePackage{FiraMono}
	\RequirePackage{newtxsf}
\fi

\if@koma
	\recalctypearea
\fi
\enableziffer

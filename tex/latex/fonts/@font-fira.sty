\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-fira}

\setmainfont[
	BoldFont = *-SemiBold,
	BoldItalicFont = *-SemiBoldItalic,
]{Fira Sans}

\setsansfont[
	BoldFont = *-SemiBold,
	BoldItalicFont = *-SemiBoldItalic
]{Fira Sans}

\setmonofont{Fira Mono}

\if@overleaf
	\setmathfont{Asana Math}
\else
	\setmathfont{Fira Math}
	\setmathfont[range=\intercal]{Asana Math}
\fi

\if@koma
	\recalctypearea
\fi

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-fira}

\ifluatexorxetex
	\setmainfont[
		BoldFont=* SemiBold,
		BoldItalicFont=* SemiBold Italic,
	]{Fira Sans}

	\setsansfont[
		BoldFont=* SemiBold,
		BoldItalicFont=* SemiBold Italic
	]{Fira Sans}

	\setmonofont[Numbers={Lining, Monospaced}]{Fira Mono}

	\setmathfont{Fira Math}
	\setmathfont[range=\setminus]{Asana Math}
\else
	\RequirePackage[sfdefault, lining, tabular, semibold]{FiraSans}
	\RequirePackage{FiraMono}
	\RequirePackage{newtxsf}
\fi

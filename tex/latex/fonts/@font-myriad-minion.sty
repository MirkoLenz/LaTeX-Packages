\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{@font-myriad-minion}

\setmainfont[
	Ligatures = TeX,
	BoldFont = Myriad Pro Semibold,
	ItalicFont = * Italic,
	BoldItalicFont = * Semibold Italic
]{Minion Pro}

\setsansfont[
	Ligatures = TeX,
	BoldFont = * Semibold,
	ItalicFont = * Italic,
	BoldItalicFont = * Semibold Italic
]{Myriad Pro}

\setmonofont[
	Ligatures = TeX
]{Menlo}



\setmathfont{MnSymbol}
\setmathfont[range=\mathup]{Minion Pro}
\setmathfont[range=\mathbfup]{Minion Pro Semibold}
\setmathfont[range=\mathit]{Minion Pro Italic}
\setmathfont[range=\mathbfit]{MinionPro Semibold Italic}

\if@koma
	\recalctypearea
\fi

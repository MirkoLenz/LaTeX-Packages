\newcommand{\maketoc}{
	{
		\pagenumbering{roman}
		\pagestyle{empty}
		\addtocontents{toc}{\protect\thispagestyle{empty}}
		\tableofcontents
		\cleardoublepage
	}
	\pagenumbering{arabic}
	\setcounter{page}{1}
}
\newcommand{\makefrontmatter}[1]{
	\frontmatter
	\maketitle
	\tableofcontents
	#1
	\cleardoublepage
	\mainmatter
}

